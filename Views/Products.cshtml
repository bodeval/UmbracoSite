@inherits UmbracoViewPage<ContentModels.Products>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
}
@Html.Partial("~/Views/Partials/SectionHeader.cshtml")
<section class="section">
      <base href="/products/">
     <app-root></app-root>
  <script src="/content/my-app/dist/my-app/runtime-es2015.js" type="module"></script>
  <script src="/content/my-app/dist/my-app/polyfills-es2015.js" type="module"></script>
  <script src="/content/my-app/dist/my-app/runtime-es5.js" nomodule></script>
  <script src="/content/my-app/dist/my-app/polyfills-es5.js" nomodule></script>
  <script src="/content/my-app/dist/my-app/styles-es2015.js" type="module"></script>
  <script src="/content/my-app/dist/my-app/styles-es5.js" nomodule></script>
  <script src="/content/my-app/dist/my-app/vendor-es2015.js" type="module"></script>
  <script src="/content/my-app/dist/my-app/main-es2015.js" type="module"></script>
  <script src="/content/my-app/dist/my-app/vendor-es5.js" nomodule></script>
  <script src="/content/my-app/dist/my-app/main-es5.js" nomodule></script>


    <div class="container">

        <!-- todo: implement category selector -->
